#!/bin/bash

# 2017 Alf Gaida <agaida@siduction.org>
# License: Wtfpl-2

#set -e


if [ ! -d /calamares ]; then
    # Mountpoint anlegen
    mkdir -p /calamares
    mount -t overlay  -o relatime,lowerdir=/fll/siduction,upperdir=/fll/cow/upper,workdir=/fll/cow/work /calamares

    # initrd fixen
    update-initram -c -k all
fi
